@model IEnumerable<ControleDeGastosWeb.Models.Pessoa>

<h2>Pessoas</h2>
<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in Model)
        {
            <tr>
                <td>@pessoa.Nome</td>
                <td>@pessoa.Idade</td>
                <td>
                    <a href="#">Editar</a> |
                    <a href="#">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Pessoas")">Adicionar Nova Pessoa</a>
